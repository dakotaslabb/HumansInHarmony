@model List<SongInfo>

<h1>HomePage</h1>

@foreach (var item in Model)
{
    <div>
        <dl class="row">
            <dt class="col-sm-2">
                Artist:
            </dt>
            <dd class="col-sm-10">
                <span>@Html.DisplayFor(model => item.ArtistName)</span>
            </dd>
            <dt class="col-sm-2">
                Album:
            </dt>
            <dd class="col-sm-10">
                <span>@Html.DisplayFor(model => item.CollectionName)</span>
            </dd>
            <dt class="col-sm-2">
                Song:
            </dt>
            <dd class="col-sm-10">
                <span>@Html.DisplayFor(model => item.TrackName)</span>
            </dd>
            <dt class="col-sm-2">
                Listen:
            </dt>
            <dd class="col-sm-10">
                <span><audio src="@Html.DisplayFor(model => item.PreviewUrl)" controls @*autoplay*@></audio></span>
            </dd>
            <dt class="col-sm-2">
                Alubm Art:
            </dt>
            <dd class="col-sm-10">
                <span><img src="@Html.DisplayFor(model => item.ArtworkUrl100)" /></span>
            </dd>
        </dl>
    </div>
    <div>
        <span>
            @Html.ActionLink("Like", "LikeSong", new { id = item.TrackId }) |
            @Html.ActionLink("Dislike", "DislikeSong", new { id = item.TrackId }) |
        </span>
    </div>
}
