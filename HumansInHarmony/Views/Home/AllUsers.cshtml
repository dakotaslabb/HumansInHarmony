@model IEnumerable<HumansInHarmony.Models.User>

@{
    ViewData["Title"] = "AllUsers";
}

<h1>AllUsers</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                Number of Likes
            </th>
            <th>
                Compare
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            SongContext database = new SongContext();
            var userLikes = from likedsong in database.LikedSongs
                            where likedsong.UserId == item.Id
                            select likedsong;
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @userLikes.Count()
                </td>
                <td>
                    <a asp-action="CompareLikes" asp-controller="Home" asp-route-Id="@item.Id">Likes</a><br />
                    <a asp-action="CompareDislikes" asp-controller="Home" asp-route-Id="@item.Id">Dislikes</a><br />
                    <a asp-action="ComareLikesToDislikes" asp-controller="Home" asp-route-Id="@item.Id">Likes vs.Dislikes</a>
                </td>
            </tr>
        }
    </tbody>
</table>
